@import "leaflet/dist/leaflet.css";
@tailwind base;
@tailwind components;
@tailwind utilities;

:root{ --ring: 0 0% 0%; }
html, body, #__next { height: 100%; }
body { @apply bg-cream text-ink font-sans antialiased; }

.container-app { @apply mx-auto max-w-7xl px-4 sm:px-6 lg:px-8; }

@layer components {
  .glass { @apply bg-white/70 backdrop-blur-md shadow-soft; }
  .chip { @apply rounded-pill px-3 py-1 text-sm font-medium; }
  .btn-primary { @apply inline-flex items-center justify-center rounded-pill bg-banana px-6 py-3 font-semibold text-ink shadow-soft hover:opacity-90 transition; }
  .card { @apply rounded-2xl bg-white shadow-soft; }
}

/* tripsy-map */
.leaflet-container {
  background: #0b0b0f; /* fits dark neon vibe */
}

/* tripsy-map */
.leaflet-container { background: #0b0b0f; }

/* --- Tripsy neon theme helpers --- */
:root {
  --bg-900: #0a0f14;
  --panel-800: #0f1620;
  --neon: #19ff9f;
  --muted: #93a2b1;
}
.tripsy-panel { background: var(--panel-800); border: 1px solid rgba(25,255,159,0.1); border-radius: 14px; }
.tripsy-glow { box-shadow: 0 0 20px rgba(25,255,159,0.08), inset 0 0 12px rgba(25,255,159,0.05); }
.tripsy-title { color: var(--neon); letter-spacing: .3px; }
.tripsy-muted { color: var(--muted); }
